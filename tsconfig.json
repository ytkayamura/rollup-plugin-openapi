  "include": ["src/**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true
  }
}
